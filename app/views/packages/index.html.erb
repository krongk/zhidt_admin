
<ol class="breadcrumb">
  <li class="active">包</li>
  <li><a href="javascript: window.history.go(-1);">返回</a></li>
  <li><%= link_to ' 添 加 ', new_package_path, class: 'btn btn-primary'%></li>
</ol>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>标题</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td>
          <h3><i class="fa fa-<%= package.icon %>"></i> <%= package.title %></h3>
          <p><%= package.description %></p>
        <td><%= link_to '添加流程', new_package_flow_path(package) %></td>
        <td><%= link_to '修改', edit_package_path(package) %></td>
        <td><%= link_to '删除', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td colspan="4">
          <%= render partial: 'flows/list', locals: {flows: package.flows} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @packages %>
<br>


