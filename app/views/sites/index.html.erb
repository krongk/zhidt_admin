
<ol class="breadcrumb">
  <li class="active">站点</li>
  <li><a href="javascript: window.history.go(-1);">返回</a></li>
  <li><%= link_to ' 添 加 ', new_site_path, class: 'btn btn-primary'%></li>
</ol>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>标题</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td>
          <h3><%= site.title %></h3>
        <td><%= link_to '修改', edit_site_path(site) %></td>
        <td><%= link_to '删除', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td colspan="4">
          <%= render partial: 'site_packages/list', locals: {site_packages: site.site_packages} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @sites %>
<br>


